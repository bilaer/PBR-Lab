{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-fsanitize=address",
        "-g",
        "src/main.cpp",
        "src/stb.cpp",
        "src/shader.cpp",
        "src/env.cpp",
        "src/geometry.cpp",
        "src/cubemap/skybox.cpp",
        "src/camera/camera.cpp",
        "src/cubemap/cubemap.cpp",
        "src/texture/texture.cpp",
        "src/material.cpp",
        "src/camera.cpp",
        "build/glad.o",
        "-o", "opengl_app",

        // include paths
        "-I${workspaceFolder}/include",
        "-I./include/gli",

        // library paths
        "-L./lib",

        // link assimp BEFORE glfw and glew
        "-lassimp",
        "-lglfw.3.4",
        "-lGLEW.2.2.0",

        // OpenGL framework
        "-framework", "OpenGL",

        // runtime rpath (so it can find dylib in ./lib when运行)
        "-Wl,-rpath,@executable_path/lib"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build with Assimp and OpenGL support"
    }
  ]
}
